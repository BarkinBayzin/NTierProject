<body class="cnt-home">
    <!-- ======================== HEADER =================== -->
    <header class="header-style-1">
        <!-- ================ TOP MENU ==================== -->
        <div class="top-bar animate-dropdown">
            <div class="container">
                <div class="header-top-inner">
                    <div class="cnt-account">
                        <ul class="list-unstyled">
                            @if (string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                            {
                                <li>
                                    <a href="~/Home/Login"><i class="icon fa fa-lock"></i>Login</a>
                                </li>
                                <li>
                                    <a href="~/Member/Register/Register"><i class="icon fa fa-user"></i>Register</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="#"><i class="icon fa fa-user"></i>Merhaba @HttpContext.Current.User.Identity.Name</a>
                                </li>
                                <li>
                                    <a href="~/Home/Logout"><i class="icon fa fa-lock"></i>Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- /.cnt-account -->
                    <!-- /.cnt-cart -->
                </div>
                <!-- /.header-top-inner -->
            </div>
            <!-- /.container -->
        </div>
        <!-- /.header-top -->
        <!-- ================ TOP MENU : END ==============-->
        <div class="main-header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 logo-holder">
                        <!-- ============= LOGO  ============-->
                        <div class="logo">
                            <a href="~/Home/Index">
                                <img src="~/Content/Images/logo.png" style="max-width:300px; max-height:100px;" alt="logo" />
                            </a>
                        </div>
                        <!-- /.logo -->
                    </div>
                    <!-- /.logo-holder  -->
                    <div class="col-xs-12 col-sm-12 col-md-7 top-search-holder">
                        <!-- /.contact-row-->
                        <!-- ================== SEARCH AREA ============== -->
                        <!-- /.search-area-->
                        <!-- ================== SEARCH AREA : END ============== -->
                    </div>
                    <!-- /.top-search-holder-->

                    <div class="col-xs-12 col-sm-12 col-md-2 animate-dropdown top-cart-row">
                        <!-- ================ SHOPPING CART DROPDOWN =============-->
                        @if (!string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                        {
                            <div class="" style="margin-top:50px;">
                                <a href="/Member/Cart/Index">
                                    <div class="">
                                        <img src="~/Content/Images/cart.png" width="40px;" height="40px;" />
                                        <p class="label">Siparişi Tamamla</p>
                                    </div>
                                </a>
                            </div>
                        }
                        <!-- ================ SHOPPING CART DROPDOWN : END =============-->
                    </div>
                    <!-- /.top-cart-row -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-->
        </div>
        <!-- /.main-header -->
        <!-- ====================== NAVBAR =====================-->
        <div class="header-nav animate-dropdown">
            <div class="container">
                <div class="yamm navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button data-target="#mc-horizontal-menu-collapse" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                            <span class="sr-only">Toggle Navigation</span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="nav-bg-class">
                        <div class="navbar-collapse collapse" id="mc-horizontal-menu-collapse">
                            <div class="nav-outer">
                                <ul class="nav navbar-nav">
                                    <li class="active animate-dropdown yamm-fw"><a href="home.html" data-hover="dropdown" class="dropdown-toggle" data-toggle="dropdown">Home</a></li>
                                </ul>
                                <!-- /.navbar-nav -->
                                <div class="clearfix"></div>
                            </div>
                            <!-- /.nav-outer -->
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                    <!-- /.navbar-bg-class -->
                </div>
                <!-- /.navbar-default -->
            </div>
            <!-- /.container-class -->
        </div>
        <!-- /.header-nav -->
        <!-- ====================== NAVBAR : END =====================-->
    </header>
    <!-- ====================== HEADER : END =====================-->

    <div class="body-content outer-top-xs" id="top-banner-and-menu">
        <div class="container">
            <div class="row">
                <!-- ================= SIDEBAR ========================= -->
                <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
                    <!-- ================= TOP NAVIGATION ===================-->
                    @*@{ Html.RenderAction("CategoryList", "Home", new { area = "" });
        /*Eğer area alanını null olarak belirtmezsek partial view area içerisinde çalışmayacaktır.*/}*@
