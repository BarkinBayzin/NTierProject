@using PagedList;
@using PagedList.Mvc;
@model IPagedList<NTier.Model.Entities.Orders>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>Sipariş Kodu</th>
                <th>Müşteri Adı</th>
                <th>Müşteri Kullanıcı Adı</th>
                <th colspan="2">Sipariş Detay</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.AppUser.Name</td>
            <td>@item.AppUser.UserName</td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
            }

        </table>
        <div class="pagedList">
            @Html.PagedListPager(Model, page => Url.Action("List","Orders", new {page}), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>


