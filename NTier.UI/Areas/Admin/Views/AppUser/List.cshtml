@using PagedList;
@using PagedList.Mvc;
@model IPagedList<NTier.Model.Entities.AppUser>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_SharedAdminLayout.cshtml";
}
<div class="col-md-12">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kullanıcı İsmi</th>
                <th>Kullanıcı Soyismi</th>
                <th>Username</th>
                @*<th>Password</th>*@
                <th>Telefon Numarası</th>
                <th>Adres</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Fotoğraf</th>
                <th colspan="3">Güncelle / Detay / Sil</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Surname
        </td>
        <td>
            @item.UserName
        </td>
        @*<td>
            @item.Password
        </td>*@
        <td>
            @item.PhoneNumber
        </td>
        <td>
            @item.Address
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.Role
        </td>
       <td>
           <img src="@item.ImagePath" style="display:block;"width="30" height="30" />
       </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
        }

    </table>
    <div class="pagedList">
        @Html.PagedListPager(Model, page => Url.Action("List", "AppUser", new {page}), PagedListRenderOptions.Classic)
    </div>
</div>


